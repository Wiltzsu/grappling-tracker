{% include '@Header/header.twig' %}

<div class="container px-3 mt-3">

    <div class="row">
        <span>View | Position
            <a href="/viewitems">
                <img src="/img/cancel.svg" alt"cancel">
            </a>
        </span>
    </div>

    <div class="row">
        {% include '@HeaderViewItems/header-viewitems.twig' %}
    </div>
    {% if positions is empty %}
        <h5>No positions found.</h5>
    {% else %}
        <div class="container">
            <div class="row">
                    <div class="col-md-12 mb-3">
                        <div class="row">
                            <div class="col-md-3">Name</div>
                            <div class="col-md-9">Description</div>
                        </div>
                    </div>
                {% for position in positions %}
                    <div class="col-md-12 mb-3">
                        <div class="row">
                            <div class="col-md-3">{{ position.positionName }}</div>
                            <div class="col-md-9">{{ position.positionDescription }}</div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
</div>
