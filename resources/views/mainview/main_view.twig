{% include '@Header/header.twig' %}

<div class="container-fluid">
    <div class="row p-5">
        <div class="col-sm-12">
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><a href="logtraining">Add journal entry.</a></li>
                <li class="list-group-item"><a href="quicknote">Make a quick note.</a></li>
            </ul>
        </div>
    </div>

    <div class="row p-3">
        <div class="col-sm-6">
            <canvas id="matTimeChart"></canvas>
        </div>
        <div class="col-sm-6">
            <canvas id="techniquesLearnedChart"></canvas>
        </div>
    </div>

    <div class="row p-5">
        <table class="table table-hover">
            <thead class="thead-light">
                <tr>
                    <th>Technique name</th>
                    <th>Instructor</th>
                    <th>Created at</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            {% if techniquesClasses is not empty %}
                {% for techniqueClass in techniquesClasses %}
                <tr>
                    <td>{{ techniqueClass.techniqueName }}</td>
                    <td>{{ techniqueClass.instructor }}</td>
                    <td>{{ techniqueClass.journalNoteDate }}</td>
                    <td>
                        <form method="POST" action="">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="4">No entries found.</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>
</div>



